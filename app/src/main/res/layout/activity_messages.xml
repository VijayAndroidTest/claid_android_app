<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg"
    tools:context=".Messages">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:id="@+id/button10"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@drawable/back_icon"
                        />

                    <Button
                        android:textColor="@color/colorwhite"
                        android:background="@drawable/bose_bg"
                        android:id="@+id/button7"
                        android:layout_width="@dimen/_180sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_height="wrap_content"
                        android:text="MESSAGES"
                        />

                    <Button
                        android:layout_marginRight="@dimen/_15sdp"
                        android:id="@+id/button4"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"

                        android:background="@drawable/ddd_icon"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:background="@drawable/frame"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorwhite"
                        android:text="1.I like To Weat A Little Looser\n2.The Cuff's Are Narrow\n3.I Like To Weat A Little Looser
\n4.The Cuff's Are Narrow\n5.I like To Weat A Little Looser" />

                    <LinearLayout
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:id="@+id/button25"
                            android:background="@drawable/frame"
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_100sdp"

                             />

                        <Button
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:id="@+id/button24"
                            android:background="@drawable/frame"
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_100sdp" />

                        <Button
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:id="@+id/button23"
                            android:background="@drawable/frame"
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_100sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/_35sdp"
                        android:layout_marginRight="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/mesage_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>

                    <TextView
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_marginRight="@dimen/_30sdp"
                        android:id="@+id/textView11"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/comt_title"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:text="Enter your Comments"
                        android:textColor="@color/colorwhite" />

                    <EditText
                        android:gravity="top"
                        android:paddingTop="@dimen/_10sdp"
                        android:textColor="@color/colorwhite"
                        android:paddingLeft="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_marginRight="@dimen/_30sdp"
                        android:id="@+id/editText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:background="@drawable/comment_bg"

                        android:inputType="textMultiLine" />

                    <Button

                        android:id="@+id/button26"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/plus_icon"
                        android:text="" />

                    <Button
                        android:id="@+id/button9"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/btn"
                        android:onClick="confirm"
                        android:text="confirm"
                        android:textAlignment="center"
                        android:textColor="@color/colorwhite"
                        android:textSize="@dimen/_16sdp"
                        tools:ignore="OnClick" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>