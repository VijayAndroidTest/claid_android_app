<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:background="@drawable/common_bg"
    tools:context=".Profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="616dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button8"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_150sdp"
                    android:background="@drawable/circle"
                    android:drawableTop="@drawable/logout"
                    android:paddingTop="@dimen/_15sdp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/colorwhite"
                    android:textSize="@dimen/_25sdp"
                    android:textStyle="bold" />

                <Button
                    android:visibility="gone"
                    android:onClick="confirm"
                    android:id="@+id/button9"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/btn"
                    android:text="confirm"
                    android:textAlignment="center"
                    android:textColor="@color/colorwhite"
                    android:textSize="@dimen/_16sdp"
                    tools:ignore="OnClick" />

                <Button
                    android:id="@+id/button_confirm"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/circle"
                    android:text="?"
                    android:textAlignment="center"
                    android:textColor="@color/colorwhite"
                    android:textSize="@dimen/_25sdp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <ScrollView


            android:id="@+id/scool"

           android:layout_marginBottom="@dimen/_50sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarStyle="insideInset"
            tools:ignore="NotSibling">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"

                    android:gravity="bottom"
                    android:isScrollContainer="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <ImageButton

                                android:id="@+id/imageButton"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="0dp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:adjustViewBounds="true"

                                android:padding="20dp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/back_icon" />

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="@dimen/_130sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_95sdp"
                                android:layout_weight="1"
                                android:background="@drawable/ess_bg"
                                android:paddingTop="@dimen/_15sdp"
                                android:text="Essential information"
                                android:textAlignment="center"
                                android:textColor="@color/colorwhite"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
android:layout_marginTop="@dimen/_25sdp"
                            android:orientation="vertical">



                            <EditText


                                android:id="@+id/editText_name"
                                android:layout_margin="@dimen/_15sdp"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_25sdp"
                                android:background="@drawable/edit_text_normal_bg"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="Name"
                                android:inputType="text"
                                android:paddingTop="@dimen/_3sdp"
                                android:text=""
                                android:textColor="@color/colorwhite"
                                android:textColorHint="@color/colorwhite"


                                >

                                <requestFocus/>
                            </EditText>




                            <EditText
                                android:id="@+id/editText_age"
                                android:layout_margin="@dimen/_15sdp"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/edit_text_normal_bg"

                                android:gravity="center"
                                android:hint="Age"
                                android:inputType="number"
                                android:paddingTop="@dimen/_3sdp"
                                android:text=""
                                android:textColor="@color/colorwhite"
                                android:textColorHint="@color/colorwhite" />

                            <EditText
                                android:id="@+id/editText_height"
                                android:layout_margin="@dimen/_15sdp"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/edit_text_normal_bg"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="Height"
                                android:inputType="numberDecimal"
                                android:paddingTop="@dimen/_3sdp"
                                android:text=""
                                android:textColor="@color/colorwhite"
                                android:textColorHint="@color/colorwhite" />

                            <EditText
                                android:id="@+id/editText_weight"
                                android:layout_margin="@dimen/_15sdp"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/edit_text_normal_bg"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="Weight"
                                android:inputType="numberDecimal"
                                android:paddingTop="@dimen/_3sdp"
                                android:text=""
                                android:textColor="@color/colorwhite"
                                android:textColorHint="@color/colorwhite"/>

                            <Button
                                android:onClick="save"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:id="@+id/button_save"
                                android:layout_gravity="center"
                                android:layout_width="@dimen/_120sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/btn"
                                android:text="Save"
                                android:textAlignment="center"
                                android:textColor="@color/colorwhite"
                                android:textSize="@dimen/_12sdp"
                                tools:ignore="OnClick" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_30sdp"

                            android:gravity="center"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/button_manual"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_marginRight="@dimen/_50sdp"
                                android:background="@drawable/measure_size"
                                android:text="" />

                            <Button
                                android:enabled="false"
                                
                                android:onClick="clickcamara"
                                android:id="@+id/button_camara"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_marginLeft="@dimen/_30sdp"
                                android:background="@drawable/photo"
                                android:text=""
                                tools:ignore="OnClick" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>