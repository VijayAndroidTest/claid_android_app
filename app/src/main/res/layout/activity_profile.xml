<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:background="@drawable/common_bg"
    tools:context=".Profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="616dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:gravity="center"
                android:orientation="horizontal"

                >

                <Button
                    android:id="@+id/button8"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_150sdp"
                    android:background="@drawable/logout"
                    android:paddingTop="@dimen/_15sdp"
                    android:text=""
                    android:onClick="history"
                    android:textAlignment="center"
                    android:textColor="@color/colorwhite"
                    android:textSize="@dimen/_25sdp"
                    android:textStyle="bold"
                    tools:ignore="OnClick" />

                <Button
                    android:id="@+id/button_confirm"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/circle"
                    android:text="?"
                    android:textAlignment="center"
                    android:textColor="@color/colorwhite"
                    android:textSize="@dimen/_25sdp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <ScrollView


            android:id="@+id/scool"

           android:layout_marginBottom="@dimen/_50sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarStyle="insideInset"
            tools:ignore="NotSibling">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"

                    android:gravity="bottom"
                    android:isScrollContainer="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:orientation="horizontal">

                            <Button

                                android:id="@+id/button18"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:background="@drawable/back_icon"
                                android:text=""
                                android:onClick="back"


                                tools:ignore="OnClick" />

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="@dimen/_130sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_60sdp"
                                android:background="@drawable/ess_bg"
                                android:paddingTop="@dimen/_15sdp"
                                android:text="Essential information"
                                android:textAlignment="center"
                                android:textColor="@color/colorwhite"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/button"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                               android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_50sdp"
                                android:background="@drawable/head_icon"
                                android:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">



                            <EditText



                                android:id="@+id/editText_name"
                                android:drawableLeft="@drawable/drname"
                                android:paddingLeft="@dimen/_15sdp"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:drawablePadding="@dimen/_15sdp"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginTop="@dimen/_25sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/edit_text_normal_bg"
                                android:ems="10"
                                android:elevation="@dimen/_16sdp"
                                android:shadowColor="#ffff"
                                android:hint="名稱"
                                android:text=""
                                android:textColor="@color/colorwhite"
                                android:textColorHint="@color/hintcolor"


                                >

                                <requestFocus/>
                            </EditText>




                            <EditText
                                android:drawableLeft="@drawable/drage"
                                android:paddingLeft="@dimen/_15sdp"
                                android:id="@+id/editText_age"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:drawablePadding="@dimen/_15sdp"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/edit_text_normal_bg"
                                android:hint="年齡"
                                android:inputType="number"
                                android:text=""
                                android:textColor="@color/colorwhite"
                                android:textColorHint="@color/hintcolor"
                                android:maxLength="2"

                                />

                            <EditText
                                android:background="@drawable/edit_text_normal_bg"
                                android:drawableLeft="@drawable/drhight"
                                android:layout_width="match_parent"
                                android:id="@+id/editText_height"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:paddingLeft="@dimen/_15sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:drawablePadding="@dimen/_22sdp"
                                android:layout_gravity="center"
                                android:ems="10"
                                android:hint="高度"
                                android:inputType="numberDecimal"

                                android:text=""
                                android:textColor="@color/colorwhite"
                                android:textColorHint="@color/hintcolor"
                                android:maxLength="3"
                                />

                            <EditText
                                android:id="@+id/editText_weight"
                                android:drawableLeft="@drawable/drweight"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:background="@drawable/edit_text_normal_bg"
                                android:drawablePadding="@dimen/_15sdp"
                                android:ems="10"
                                android:hint="重量"
                                android:inputType="numberDecimal"
                                android:maxLength="3"
                                android:paddingLeft="@dimen/_15sdp"
                                android:text=""
                                android:textColor="@color/colorwhite"
                                android:textColorHint="@color/hintcolor" />

                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_marginRight="@dimen/_45sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <Button
                                        android:id="@+id/button_male"
                                        android:layout_width="@dimen/_45sdp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_30sdp"
                                        android:background="@drawable/drman"
                                        android:onClick="male_click"
                                        android:text=""
                                        tools:ignore="OnClick" />

                                    <TextView

                                        android:id="@+id/textView15"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_45sdp"
                                        android:text="男"

                                        android:textAlignment="center"
                                        android:textColor="@color/colorwhite"
                                        android:textSize="@dimen/_14sdp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginLeft="@dimen/_45sdp"

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <Button
                                        android:id="@+id/button_female"
                                        android:layout_width="@dimen/_45sdp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="@dimen/_30sdp"
                                        android:background="@drawable/drwomen"
                                        android:onClick="female_click"
                                        tools:ignore="OnClick" />

                                    <TextView
                                        android:id="@+id/textView16"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_15sdp"
                                        android:text="女"
                                        android:textColor="@color/colorwhite"
                                        android:textSize="@dimen/_14sdp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </LinearLayout>

                            <Button
                                android:enabled="false"
                                android:onClick="save"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:id="@+id/button_save"
                                android:layout_gravity="center"
                                android:layout_width="@dimen/_120sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/btn"
                                android:text="submit"
                                android:textAlignment="center"
                                android:textColor="@color/colorwhite"
                                android:textSize="@dimen/_16sdp"
                                tools:ignore="OnClick" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/button_manual"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:background="@drawable/measure_size"
                                android:text="" />

                            <Button
                                android:enabled="false"
                                
                                android:onClick="clickcamara"
                                android:id="@+id/button_camara"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_marginLeft="@dimen/_30sdp"
                                android:background="@drawable/photo"
                                android:text=""
                                tools:ignore="OnClick" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>