<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.claid.AttitudeIndicator
            android:id="@+id/attitude_indicator"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_75sdp"
            android:layout_gravity="center"
android:layout_marginBottom="@dimen/_5sdp"
            android:onClick="ok" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_80sdp"
        android:orientation="vertical">

        <LinearLayout

            android:id="@+id/cPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


        </LinearLayout>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <ImageView

            android:id="@+id/imageView7"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_20sdp"
            app:srcCompat="@drawable/front"

            />

        <Button

            android:textColor="#000000"

            android:id="@+id/btnCam"

            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center"


            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@drawable/ic_camera_btn"


            />

    </LinearLayout>


    <TextView
        android:visibility="gone"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:layout_alignParentBottom="false"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text=""
        android:textSize="14sp"
        android:textColor="#00f"
        />

    <TextView
        android:visibility="gone"
        android:id="@+id/ResultView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#f0f"

        android:layout_marginLeft="300dp"
        android:layout_alignParentBottom="true"
        />

    <ProgressBar

        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />


    <TextView
        android:visibility="gone"
        android:id="@+id/ImageNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#f00"
        android:textStyle="bold"
        android:layout_marginLeft="160dp"
        android:layout_marginBottom="60dp"
        android:text="Left Side Bose"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>