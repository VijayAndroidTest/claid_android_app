<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:background="@drawable/common_bg"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:coverflow="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/common_bg"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button14"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_weight="1"
                android:background="@drawable/video_onclick"
                android:text="" />

            <Button
                android:id="@+id/button13"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_weight="1"
                android:background="@drawable/camera_onclick"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_270sdp"
            android:gravity="center"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <it.moondroid.coverflow.components.ui.containers.FeatureCoverFlow
                android:id="@+id/coverflow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_230sdp"

                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                coverflow:coverHeight="@dimen/_200sdp"
                coverflow:coverWidth="@dimen/_150sdp"
                coverflow:maxScaleFactor="1.1"
                coverflow:reflectionGap="1000px"
                coverflow:rotationThreshold=".2"
                coverflow:scalingThreshold=".5"
                coverflow:spacing="0.4" />
        </LinearLayout>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>